@model BuildMentor.Models.ToolModel
@{
    ViewData["Title"] = @Resource.ResourceManager.GetString("Add Tool");
    Layout = "_AdminLayout";
}
@using BuildMentor.Resources;
<h2>@ViewData["Title"]</h2>

<form method="post" action="/Admin/Tools/Add" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">@Resource.ResourceManager.GetString("Name")</label>
        <input type="text" id="Name" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">@Resource.ResourceManager.GetString("Description")</label>
        <textarea id="Description" name="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="UploadedImage">@Resource.ResourceManager.GetString("Image")</label>
        <input type="file" id="UploadedImage" name="UploadedImage" class="form-control-file" />
    </div>
    <div class="form-group">
        <label for="Price">@Resource.ResourceManager.GetString("Price")</label>
        <input type="text" id="Price" name="Price" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">@Resource.ResourceManager.GetString("Add Tool")</button>
</form>
