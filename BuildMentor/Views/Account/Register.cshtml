@model BuildMentor.Models.RegisterModel
@using BuildMentor.Database.Enums;
@{
    ViewData["Title"] = @Resource.ResourceManager.GetString("Register");
}
@using BuildMentor.Resources;
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <link rel="icon" href="/static/images/favicon.ico" />
    <meta name="author" content="">

    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background: url('/static/images/login-bg.png') no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }

        .login-image {
            background: url('/static/images/register-image.png');
            background-position: center;
            background-size: cover;
        }
    </style>

    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body>
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block login-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">@Resource.ResourceManager.GetString("Create an Account")</h1>
                            </div>
                            <form class="user" id="registerForm">

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="Login" name="Login"
                                               placeholder="@Resource.ResourceManager.GetString("Login")">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" id="Name" name="Name"
                                               placeholder="@Resource.ResourceManager.GetString("Full Name")">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" id="Email" name="Email"
                                           placeholder="@Resource.ResourceManager.GetString("Email Address")">
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="Country" name="Country"
                                               placeholder="@Resource.ResourceManager.GetString("Country")">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" id="City" name="City"
                                               placeholder="@Resource.ResourceManager.GetString("City")">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" id="Address" name="Address"
                                           placeholder="@Resource.ResourceManager.GetString("Billing Address")">
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="PhoneNumber" name="PhoneNumber"
                                               placeholder="@Resource.ResourceManager.GetString("Phone Number")">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="date" class="form-control form-control-user" id="BirthDate" name="BirthDate"
                                               placeholder="@Resource.ResourceManager.GetString("City")">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="file" class="form-control" id="UploadedAvatar" name="UploadedAvatar"
                                           placeholder="@Resource.ResourceManager.GetString("User Avatar")">
                                </div>

                                <div class="form-group">
                                    <label class="form-label">@Resource.ResourceManager.GetString("Occupation")</label>
                                    <select class="form-control" id="BuilderJobs" name="BuilderJobs">
                                        @foreach (var job in Enum.GetValues(typeof(BuilderJobs)))
                                        {
                                            <option value="@job">@Resource.ResourceManager.GetString(job.ToString())</option>
                                        }
                                     </select>
                                </div>


                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user"
                                               id="Password" name="Password" placeholder="@Resource.ResourceManager.GetString("Password")">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user"
                                               id="RepeatPassword" name="RepeatPassword" placeholder="@Resource.ResourceManager.GetString("Repeat Password")">
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    @Resource.ResourceManager.GetString("Register Account")
                                </button>
                            </form>
                            <hr>                  
                            <div class="text-center">
                                <a class="small" href="/Account/Login">@Resource.ResourceManager.GetString("Already have an account?") @Resource.ResourceManager.GetString("Login")!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>
<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="~/js/sb-admin-2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById('registerForm').addEventListener('submit', function (e) {
        e.preventDefault();

        fetch('/Account/Register', {
            method: 'POST',
            body: new FormData(this)
        })
            .then(response => response.json())
            .then(data => {
                if (data.message) {
                    Swal.fire({
                        title: '@Resource.ResourceManager.GetString("Success")',
                        text: '@Resource.ResourceManager.GetString("Success")',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '/Profile/MyProfile';
                        }
                    });
                } else {
                    Swal.fire({
                        title: '@Resource.ResourceManager.GetString("Error")',
                        text: data.error,
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            })
            .catch(error => {
                Swal.fire({
                    title: '@Resource.ResourceManager.GetString("Error")',
                    text: '@Resource.ResourceManager.GetString("An error occurred.Please try again.")',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            });
    });
</script>

</html>