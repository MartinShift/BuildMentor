@{
    Layout = User.IsInRole("USER") ? "_Layout" : "_AdminLayout";
    ViewData["Title"] = @Resource.ResourceManager.GetString("Access Denied");
}
@using BuildMentor.Resources;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container text-center mt-5">
        <span class="text-danger display-1">
            <i class="fas fa-exclamation-triangle"></i>
        </span>
        <h1 class="mt-3 text-danger">@ViewData["Title"]</h1>
        <p>@Resource.ResourceManager.GetString("You don't have permission to access this section.")</p>
    </div>
</body>
</html>